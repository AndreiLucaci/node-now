{
  "name": "node-now",
  "version": "0.1.0",
  "private": true,
  "main": "src/start.js",
  "homepage": "./",
  "author": {
    "name": "Andrei Lucaci",
    "email": "lucaciandrei@outlook.com",
    "url": "http://andreilucaci.ro"
  },
  "build": {
    "appId": "com.andreilucaci.node-now",
    "productName": "NodeNow",
    "copyright": "Copyright Â© 2020 ${author}",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "ace-builds": "^1.4.8",
    "concurrently": "^5.1.0",
    "electron-is-dev": "^1.1.0",
    "react": "^16.12.0",
    "react-ace": "^8.1.0",
    "react-dom": "^16.12.0",
    "react-scripts": "3.4.0",
    "recompose": "^0.30.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "eledev": "concurrently \"BROWSER=none yarn start\" \"wait-on http://localhost:7000 && electron .\"",
    "postinstall": "electron-builder install-app-deps",
    "preelectron-pack": "yarn build",
    "electron-pack": "build -mw",
    "electron": "electron src/start.js"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@rescripts/cli": "^0.0.13",
    "@rescripts/rescript-env": "^0.0.11",
    "electron": "^9.4.0",
    "electron-builder": "^22.3.2",
    "isomorphic-style-loader": "^5.1.0",
    "typescript": "^3.8.2"
  }
}
